{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "typings/browser.d.ts",
    "typings/browser",
    "bin",
    "dist",
    "node_modules"
  ]
}